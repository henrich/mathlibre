   --mirror-binary "http://ftp.tw.debian.org/debian/" \
   --bootappend-live \
    "boot=live config quiet splash \
    live-config.locales=zh_TW.UTF-8 \
    live-config.timezone=Asia/Taipei \
    live-config.keyboard-model=us \
    live-config.keyboard-layouts=us"
