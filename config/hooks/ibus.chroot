#!/bin/sh

case $LANG in
	ja_JP.UTF-8)
		;;
	ko_KR.UTF-8)
		sed -i -e 's/mozc-jp/hangul/g' /etc/skel/.gconf/desktop/ibus/general/%gconf.xml
		;;
	zh_CN.UTF-8)
		sed -i -e 's/mozc-jp/pinyin/g' /etc/skel/.gconf/desktop/ibus/general/%gconf.xml
		;;
	zh_TW.UTF-8)
		sed -i -e 's/mozc-jp/chewing/g' /etc/skel/.gconf/desktop/ibus/general/%gconf.xml
		;;
esac
